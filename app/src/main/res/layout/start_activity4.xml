<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/start_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/start_activity_card5"
        style="@style/CardStart"
        android:rotation="5"
        android:translationZ="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="82dp"
        app:layout_constraintBottom_toTopOf="@+id/progress_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="32dp">

        <ImageView
            android:id="@+id/start_activity_image5"
            style="@style/ImageStart"
            android:contentDescription="@string/rick_and_morty"
            android:src="@drawable/rick_and_morty" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/start_activity_card6"
        style="@style/CardStart"
        android:layout_marginRight="48dp"
        android:translationZ="6dp"
        android:rotation="-25"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toTopOf="@+id/progress_bar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="48dp">

        <ImageView
            android:id="@+id/start_activity_image6"
            style="@style/ImageStart"
            android:contentDescription="@string/dark_knight_film"
            android:src="@drawable/dark_knight" />
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>

